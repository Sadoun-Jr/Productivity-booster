<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".initialization.GetSleepTime">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/sleep_welcome" />

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="225dp"/>

        <TextView
            android:id="@+id/sleepTimeText"
        android:textColor="#0096FF"
        android:textStyle="bold"
        android:layout_margin="18dp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="sans-serif-condensed"
        android:textSize="32sp"
        android:text="@string/whenDoYouSleep"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TimePicker


        android:id="@+id/timePickerSleep"
        android:datePickerMode="spinner"
        android:layout_width="wrap_content"
        android:timePickerMode="spinner"
        android:layout_height="wrap_content">
    </TimePicker>


        <Button
            android:id="@+id/getSleepBtn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/my_blue_btn"
            android:text="@string/next"
            android:textColor="@color/white_text_color">

        </Button>
    </LinearLayout>
</RelativeLayout>