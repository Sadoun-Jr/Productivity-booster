<?xml version="1.0" encoding="utf-8"?>
<!-- Here frame layout is used so that different
     fragments of our onboarding screen can be
     changed within the same layout-->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".initialization.OnBoardingDesignOne">

    <Button
        android:id="@+id/skipBtn"
        android:textColor="#FFFFFF"
        android:text="SKIP"
        android:layout_margin="16dp"
        android:layout_gravity="end|top"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:elevation="10dp"
        android:background="@drawable/my_black_btn"/>
</FrameLayout>