<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="500dp" />
            <stroke android:width="1dip" android:color="#999999" />
            <gradient android:angle="-90" android:startColor="#999999" android:endColor="#999999"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="500dp" />
            <stroke android:width="1dip" android:color="#999999" />
            <solid android:color="#000112"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="500dip" />
            <stroke android:width="1dip" android:color="#999999" />
            <gradient android:angle="-90" android:startColor="#000112" android:endColor="#000112" />
        </shape>
    </item>
</selector>